    <script>
        function openWhatsApp(packageType, details, price) {
            const message = `I want to order ${packageType}: ${details} for ‚Çπ${price}`;
            const whatsappNumber = "8153071343"; // Replace with your WhatsApp number
            const url = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;
            window.open(url, '_blank');
        }
